<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Participation-Tools</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="<%= active_class(root_path) %>"><%= link_to 'Home', root_path %></li>
        <li class="<%= active_class(about_path) %>"><%= link_to 'About', about_path %></li>
        <li class="<%= active_class(contact_path) %>"><%= link_to 'Contact', contact_path %></li>
      </ul>

      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= fa_icon current_user.admin? ? 'user-plus' : 'user' %> &nbsp; <%= current_user.firstname %> <%= current_user.lastname %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li>
                  <%= link_to users_path do %>
                    <%= fa_icon 'users', class: 'fa-fw' %> &nbsp; Users
                  <% end %>
                </li>
                <li>
                  <%= link_to tools_path do %>
                      <%= fa_icon 'wrench', class: 'fa-fw' %> &nbsp; Tools
                  <% end %>
                </li>
                <li>
                  <%= link_to themes_path do %>
                      <%= fa_icon 'cubes', class: 'fa-fw' %> &nbsp; Themes
                  <% end %>
                </li>
                <li>
                  <%= link_to globals_path do %>
                      <%= fa_icon 'globe', class: 'fa-fw' %> &nbsp; Globals
                  <% end %>
                </li>
                <li role="separator" class="divider"></li>
              <% end %>
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <%= fa_icon 'sign-out', class: 'fa-fw' %> &nbsp; Logout
                  <% end %>
                </li>
            </ul>
          </li>
        </ul>
      <% end %>

    </div>
  </div>

  <% if current_user && !current_user.admin? %>
  <div class="theme-banner">
    <% if current_user.theme %>
      <%= image_tag current_user.theme.logo.thumb.url, class: 'pull-left', style: "height:30px;margin-top:-5px;padding-right:20px" %>
      <strong><%= current_user.theme.name %></strong> | <%= current_user.theme.description %>
    <% else %>
        <strong>No Theme</strong> | Please select a theme for this user.
    <% end %>
  </div>
  <% end %>
