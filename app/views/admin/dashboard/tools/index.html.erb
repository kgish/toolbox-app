<%= render 'admin/dashboard/header' do %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th class="textalign-center">Icon</th>
        <th>Name</th>
        <th>Title</th>
        <th colspan="3" class="textalign-right"><%= link_to 'New Tool', new_admin_dashboard_tool_path, class: 'btn btn-success' %></th>
      </tr>
    </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <tr>
          <td class="textalign-center"><span class="palette-<%= tool.color %>"><%= fa_icon tool.icon %></span></td>
          <td><%= tool.name %></td>
          <td><%= tool.title %></td>
          <td><%= link_to 'Show', admin_dashboard_tool_path(tool) %></td>
          <td><%= link_to 'Edit', edit_admin_dashboard_tool_path(tool) %></td>
          <td>
            <%= link_to admin_dashboard_tools_path, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete' do %>
                <%= fa_icon 'trash' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
