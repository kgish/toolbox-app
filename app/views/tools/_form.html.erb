<%= simple_form_for(@tool) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :icon %>
  </div>

  <div class="form-inputs">
    <%= f.input :color %>
    <% 20.times do |i| %>
      <%= i %>-<%= fa_icon 'square', class: "palette-#{i}", title: "#{i}" %>
    <% end %>
  </div>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :text %>
  </div>

  <div class="form-inputs">
    <%= f.input :content, class: 'bootsy-textarea', as: :bootsy %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
