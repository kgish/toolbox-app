<%= simple_form_for(@tool) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :icon %>
    <div class='legend'>
      E.g. 'bell', 'book', 'bolt' (<a href="http://fontawesome.io/icons/" target="_blank">fontawesome icons</a>)
    </div>
  </div>

  <div class="form-inputs">
    <%= f.input :color %>
    <div class='legend'>
      <% 13.times do |i| %>
        <%= i %> = <%= fa_icon 'square', class: "palette-#{i}", title: "#{i}" %><%= i == 12 ? '' : ', ' %>
      <% end %>
    </div>
  </div>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :text %>
  </div>

  <div class="form-inputs">
    <%= f.input :content, class: 'bootsy-textarea', as: :bootsy %>
  </div>

  <%= f.error :base %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
