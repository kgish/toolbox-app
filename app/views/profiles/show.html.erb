<%= render partial: 'shared/heading', :locals => {:h1 => 'Profile', :p => 'These are settings for your own personlization'} %>

<div class="row main-content">

  <p id="notice"><%= notice %></p>

  <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th>Property</th><th>Value</th>
      </tr>
    </thead>

    <tbody>

      <tr>
        <td>First name</td><td><%= @user.firstname %></td>
      </tr>

      <tr>
        <td>Last name</td><td><%= @user.lastname %></td>
      </tr>

      <tr>
        <td>Email</td><td><%= @user.email %></td>
      </tr>

      <tr>
        <td>Username</td><td><%= @user.username %></td>
      </tr>

      <tr>
        <td>Password</td><td>*****</td>
      </tr>

      <tr>
        <td>Company</td><td><%= @user.company %></td>
      </tr>

      <tr>
        <td>Photo</td><td><%= image_tag @user.photo.thumb.url %>
      </tr>

    </tbody>

  </table>

  <%= link_to 'Edit', edit_profile_path(@user) %>

</div>
