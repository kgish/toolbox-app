<%= render partial: 'shared/heading', :locals => {:h1 => 'Globals', :p => 'Application-wide configuration parameters for tweaking purposes'} %>

<div class="row main-content">

  <%= will_paginate @globals, renderer: BootstrapPagination::Rails %>

  <table class="table table-striped table-bordered table-responsive">
    <thead>
    <tr>
      <th>Id</th>
      <th>Key</th>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3" class="textalign-center"><%= link_to 'New Global', new_global_path %></th>
    </tr>
    </thead>

    <tbody>
    <% @globals.each do |global| %>
        <tr>
          <td><%= global.id %></td>
          <td><%= global.key %></td>
          <td><%= global.value %></td>
          <td><%= global.description %></td>
          <td><%= link_to 'Show', global %></td>
          <td><%= link_to 'Edit', edit_global_path(global) %></td>
          <td><%= link_to 'Delete', global, method: :delete, data: { title: 'WARNING', confirm: 'Are you sure you want to delete this global?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= will_paginate @globals, renderer: BootstrapPagination::Rails %>

</div>
