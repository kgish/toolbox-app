<%= render partial: 'shared/heading', :locals => {:h1 => 'Login', :p => 'Either enter your email and password or use Single Sign On'} %>

<div class="row main-content">

    <div class="col-md-4"></div>

    <div class="col-md-4">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

      <hr/>
      <p>Or use Single Sign On</p>

      <%= link_to '/openidconnect', class: 'btn btn-success' do %>
          <%= fa_icon 'openid', class: 'fa-fw' %>&nbsp; OpenID
      <% end %>

      <% if false %>
        <%= link_to '/implicit-test.html', class: 'btn btn-success' do %>
            <%= fa_icon 'openid', class: 'fa-fw' %>&nbsp; Implicit Test
        <% end %>
      <% end %>

    </div>

</div>
