<div class="main-heading">
  <h1>Users</h1>
  <p class="lead">List of accounts for admins and regular users.</p>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Company</th>
      <th>Admin</th>
      <th colspan="3" class="textalign-right"><%= link_to 'New User', new_user_path, class: 'btn btn-success' %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %> <%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.company %></td>
        <td><%= user.admin? %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <%= fa_icon 'trash' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
