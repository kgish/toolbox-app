    <%= f.input :email %>
  </div>

  <div class="form-inputs">
    <%= f.input :username %>
  </div>

  <div class="form-inputs">
    <%= f.input :password %>
  </div>

  <div class="form-inputs">
    <%= f.input :firstname %>
  </div>

