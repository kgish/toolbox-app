<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <% if @user.persisted? %>
    <span id="toggle-button" class="btn btn-success">Change Password <%= fa_icon 'arrow-down' %></span>
    <div id="toggle-target" class="hide-me">
  <% end %>

  <div class="form-inputs">
    <%= f.input :password %>
  </div>

  <div class="form-inputs">
    <%= f.input :password_confirmation %>
  </div>

  <% if @user.persisted? %>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :username %>
  </div>

  <div class="form-inputs">
    <%= f.input :firstname %>
  </div>

  <div class="form-inputs">
    <%= f.input :lastname %>
  </div>

  <div class="form-inputs">
    <%= f.input :company %>
  </div>

  <div class="form-inputs">
    <%= f.input :admin %>
  </div>

  <div class="form-inputs">
    <div class="form-group"><label class="control-label" for="user_photo">Photo</label><br />
      <%= image_tag @user.photo.url, id: 'user_photo' %>
    </div>
  </div>

  <div class="form-inputs choose-file">
    <%= f.file_field :photo, accept: 'image/*' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
